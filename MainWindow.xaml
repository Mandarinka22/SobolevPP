            <Label x:Name="v" Content="Учет финансовой деятельности нотариуса" Visibility="Visible" FontSize="32" Foreground="White" HorizontalAlignment="Left" Margin="432,0,0,0" VerticalAlignment="Center" Height="61" Width="703"/>

